<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Getitdone Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Getitdone Error", sticky: false, image: :error) %>
<% elsif flash[:success] %>
  <%= js add_gritter(flash[:success], title: "Getitdone Success", sticky: false, image: :success) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Getitdone Notification", sticky: false, image: :notice) %>
<% end %>