<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GMAP_KEY'] %>&callback=initMap"
    async defer></script>

<script>
  function initMap() {
    // Create a map object and specify the DOM element for display.
    var destination = {lat: <%= @task.latitude %>, lng: <%= @task.longitude %>};

    var map = new google.maps.Map(document.getElementById('map'), {
      center: destination,
      scrollwheel: false,
      zoom: 14
    });

    // Create a marker and set its position.
    var marker = new google.maps.Marker({
      map: map,
      position: destination,
      title: "<%= @task.title %>"
    });
  }
</script>