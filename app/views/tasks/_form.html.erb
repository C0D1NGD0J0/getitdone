<%= form_for @task do |f| %>
  <%= render 'shared/form_errors', obj: @task %>
  
	<div class="form-group">
    <%= f.text_field :title, autofocus: true, class:'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= f.text_field :location, autofocus: true, class:'form-control', placeholder: 'Location..' %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, class:'form-control', placeholder: 'Description of task/appointment' %>
  </div>

  <div class="form-group">
    <%= f.date_field :date, class:'form-control', placeholder: 'Date of appointment/task' %>
  </div>
  
  <%= f.submit (@task.new_record? ? 'Add Task' : 'Update Task'), class:'btn btn-primary' %>
  <% unless @task.new_record? %>
    <%= link_to 'Back', @task, class:'btn btn-default' %>
  <% end %>
<% end %>