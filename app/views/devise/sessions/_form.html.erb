<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render 'shared/form_errors', obj: resource %>
  
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder:'johndoe@example.com', class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder:'******', class:'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <%= f.submit "Log in", class:'btn btn-warning' %>
  <%= link_to 'Forgot Password', new_user_password_path, class: 'btn btn-danger' %>
<% end %>